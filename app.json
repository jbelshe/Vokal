{
  "expo": {
    "name": "my-app",
    "slug": "vokal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icons/vokal-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/assets/images/splash_bg.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jackbelshe.myapp",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show it on the map",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "googleMapsApiKey": "$EXPO_PUBLIC_GOOGLE_MAPS_API_KEY"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/icons/vokal-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.jackbelshe.myapp",
      "config": {
        "googleMaps": {
          "apiKey": "$ANDROID_GOOGLE_MAPS_API_KEY"
        }
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./src/assets/icons/vokal-icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "624b7d5c-5ec8-42de-a406-531f1316b5de"
      }
    },
    "owner": "vokal",
    "plugins": [
      "expo-secure-store",
      "expo-font",
      [
        "expo-maps",
        {
          "requestLocationPermission": "true",
          "locationPermission": "Allow Vokal to use your location",
          "apiKey": {
            "ios": "$EXPO_PUBLIC_GOOGLE_MAPS_API_KEY",
            "android": "$ANDROID_GOOGLE_MAPS_API_KEY"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow this app to access your location to show your position on the map."
        }
      ]
    ],
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/abc3787e-7dc3-4e44-a18c-ebf130f332a3"
    }
  }
}
